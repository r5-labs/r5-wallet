{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "isolatedModules": true
  },
  "include": ["src", "main.ts"],
  "exclude": ["node_modules", "dist"]
}
